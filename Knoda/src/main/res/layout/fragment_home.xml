<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="views.predictionlists.HomeFragment">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/base_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_background"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <RelativeLayout
        android:id="@+id/home_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkerTransparentBlack"
        android:clickable="true"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/overlay_top_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/overlay_navigation_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intro_arrow_up" />

            <TextView
                style="@style/largeWhiteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/overlay_navigation_arrow"
                android:text="Navigation" />

            <ImageView
                android:id="@+id/overlay_prediction_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/intro_arrow_up" />

            <TextView
                style="@style/largeWhiteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/overlay_prediction_arrow"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:text="Tap here to make\na prediction" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/overlay_agree_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/overlay_agree_arrows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/intro_double_arrow_right" />

                <TextView
                    style="@style/largeWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/overlay_agree_arrows"
                    android:text="Swipe right to agree with a prediction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/overlay_disagree_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overlay_agree_prompt"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/overlay_disagree_arrows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/intro_double_arrow_left" />

                <TextView
                    style="@style/largeWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/overlay_disagree_arrows"
                    android:text="Swipe left to disagree with a prediction" />

            </RelativeLayout>

            <!--<TextView style="@style/largeWhiteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap on a prediction to view more details"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/overlay_disagree_prompt"
                android:layout_marginTop="20dp"/>-->

        </RelativeLayout>

        <Button
            android:id="@+id/over_button"
            style="@style/largeWhiteText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/knodaLightGreen"
            android:text="Ok, I got it." />
    </RelativeLayout>

</RelativeLayout>