<?xml version="1.0" encoding="utf-8"?>

<views.profile.UserProfileHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/lightGray">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/user_profile_header_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/knodaLighterGreen"/>

    <RelativeLayout
        android:id="@+id/user_profile_header_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/user_profile_header_avatar"
        android:background="@color/white">

        <ImageView
            android:id="@+id/user_profile_header_statsicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_stats_icon"
            android:layout_margin="10dp"/>
        
        <TextView style="@style/darkGreenText"
            android:id="@+id/user_profile_header_points_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_profile_header_statsicon"
            android:text="test"/>

        <TextView style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POINTS"
            android:paddingLeft="2dp"
            android:layout_alignBaseline="@id/user_profile_header_points_textview"
            android:layout_toRightOf="@id/user_profile_header_points_textview"
            />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/user_profile_header_top"
        android:layout_alignLeft="@id/user_profile_header_top"
        android:background="@color/white">

        <TextView style="@style/darkGreenText"
            android:id="@+id/user_profile_header_win_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="40.91%"/>

        <TextView style="@style/darkGreenText"
            android:id="@+id/user_profile_header_streak_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="W2"/>

        <TextView style="@style/darkGreenText"
            android:id="@+id/user_profile_header_wl_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="10-13"/>


        <TextView style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="win%"
            android:layout_below="@id/user_profile_header_win_textview"
            android:layout_alignLeft="@id/user_profile_header_win_textview"/>
        <TextView style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="streak"
            android:layout_below="@id/user_profile_header_streak_textview"
            android:layout_alignLeft="@id/user_profile_header_streak_textview"/>
        <TextView style="@style/smallDarkGreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W-L"
            android:layout_below="@id/user_profile_header_wl_textview"
            android:layout_alignLeft="@id/user_profile_header_wl_textview"/>

        </RelativeLayout>

</views.profile.UserProfileHeaderView>