<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/knodaLightGreen"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25">

            <TextView
                android:id="@+id/activity_1"
                style="@style/tabText"
                android:text="All"
                android:textColor="@color/white" />

            <View
                android:id="@+id/underline_1"
                style="@style/tabUnderline" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25">

            <TextView
                android:id="@+id/activity_2"
                style="@style/tabText"
                android:text="Expired" />

            <View
                android:id="@+id/underline_2"
                style="@style/tabUnderline"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25">

            <TextView
                android:id="@+id/activity_3"
                style="@style/tabText"
                android:gravity="center"
                android:text="Comments" />

            <View
                android:id="@+id/underline_3"
                style="@style/tabUnderline"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25">

            <TextView
                android:id="@+id/activity_4"
                style="@style/tabText"
                android:text="Invites" />

            <View
                android:id="@+id/underline_4"
                style="@style/tabUnderline"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/base_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_background"
        android:divider="@null"
        android:dividerHeight="0dp" />
</LinearLayout>