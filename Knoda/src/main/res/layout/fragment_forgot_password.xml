<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.login.ForgotPasswordFragment"
    android:background="@color/knodaLightGreen">

    <ImageView
        android:id="@+id/forgot_logo_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo_small"
        android:layout_centerHorizontal="true"/>

    <TextView style="@style/smallWhiteText"
        android:id="@+id/forgot_textview_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forgot_logo_small"
        android:text="Forgot your password? Enter your email address and we'll emaill you a link to create a new one."
        />

    <EditText style="@style/edittext_main"
        android:id="@+id/forgot_username_edittext"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/forgot_textview_prompt"
        android:hint="email"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionDone" />

</RelativeLayout>
