<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.login.PhotoChooserActivity"
    tools:ignore="MergeRootFrame"
    android:background="@color/knodaLightGreen">

    <ImageView
        android:id="@+id/photo_chooser_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/knodaLighterGreen"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <FrameLayout
        android:id="@+id/photo_chooser_progress_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:background="@color/transparentBlack">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:background="@android:color/transparent"/>
    </FrameLayout>

</RelativeLayout>