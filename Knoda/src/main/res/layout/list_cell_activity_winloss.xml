<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/prediction_cell_body_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/winloss_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/winloss_cell_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp">


            <TextView
                android:id="@+id/winloss_winloss_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="You Won-Booya! You Beat ZachG  37 Others"
                android:textColor="@color/knodaDarkGreen"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/winloss_comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/winloss_cell_top_container"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/winloss_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I will beat Carlos in Fantasy Football this week by at least 30 points"
                android:textColor="#888"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/winloss_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/winloss_comment_container"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/winloss_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brag"
                android:textColor="#77BC1F"
                android:textSize="18sp"
                android:background="@drawable/brag_button"
                />
        </RelativeLayout>
    </RelativeLayout>
</merge>