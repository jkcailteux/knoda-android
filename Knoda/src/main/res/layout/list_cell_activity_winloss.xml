<?xml version="1.0" encoding="utf-8"?>

<views.activity.ActivityListWinLossCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/prediction_cell_body_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/winloss_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_notification_avatar" />

        <LinearLayout
            android:id="@+id/winlosstext_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/winloss_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You Won-Booya! You Beat ZachG &amp; 37 Others"
                android:textColor="@color/knodaDarkGreen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/winloss_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="I will beat Carlos in Fantasy Football this week by at least 30 points"
                android:textColor="#888"
                android:textSize="18sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/winloss_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/winlosstext_container"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/winloss_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="45dp"
                android:background="@drawable/brag_button"
                android:gravity="center"
                android:text="Brag"
                android:textColor="#77BC1F"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/prediction_cell_body_view"
        android:layout_margin="7dp"
        android:background="#DDD" />
</views.activity.ActivityListWinLossCell>