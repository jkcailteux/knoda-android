<?xml version="1.0" encoding="utf-8"?>

<views.activity.ActivityListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/activity_cell_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/activity_comment_icon"/>


    <TextView
        android:id="@+id/activity_cell_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activity_cell_imageview"
        android:layout_margin="10dp"/>

    <TextView style="@style/smallGreenText"
        android:id="@+id/activity_cell_metadata_textview"
        android:layout_below="@id/activity_cell_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/activity_cell_textview"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

</views.activity.ActivityListCell>