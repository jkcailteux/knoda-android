<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightGray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/profile">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context="views.profile.MyProfileFragment"
            >
            
            <views.profile.UserProfileHeaderView
                android:id="@+id/profile_view_user_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></views.profile.UserProfileHeaderView>


            <TextView
                style="@style/edittext_main"
                android:id="@+id/profile_username_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="username"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />

            <TextView
                style="@style/edittext_main"
                android:id="@+id/profile_email_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="email"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />

            <TextView
                style="@style/edittext_main"
                android:id="@+id/profile_password_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Change Password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="lock it down"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />
            <RelativeLayout
                android:id="@+id/profile_facebook_button"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/edittext_main"
                    android:id="@+id/profile_facebook_account_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="nrellihan@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Facebook"
                    android:layout_below="@id/profile_facebook_account_name"/>

                <ImageView
                    android:id="@+id/profile_facebook_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook_share"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />
            <RelativeLayout
                android:id="@+id/profile_twitter_button"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/edittext_main"
                    android:id="@+id/profile_twitter_account_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="nrellihan@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Twitter"
                    android:layout_below="@id/profile_twitter_account_name"/>

                <ImageView
                    android:id="@+id/profile_twitter_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twitter_share"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button style="@style/button_main"
            android:id="@+id/button_sign_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_signup_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/knodaLightGreenTransparent"
        android:visibility="invisible">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/welcome_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_logo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/profile_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_logo"
                android:text="Woah there cowboy!"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/profile_prompt"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_signup_message"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_below="@id/profile_welcome"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

            <Button style="@style/button_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_prompt"
                android:id="@+id/profile_signup_button"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>
            </RelativeLayout>
</RelativeLayout>


