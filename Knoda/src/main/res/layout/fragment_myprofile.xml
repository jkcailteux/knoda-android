<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightGray">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="views.profile.MyProfileFragment">

            <views.profile.UserProfileHeaderView
                android:id="@+id/profile_view_user_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></views.profile.UserProfileHeaderView>


            <TextView
                android:id="@+id/profile_username_edittext"
                style="@style/edittext_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="username" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />

            <TextView
                android:id="@+id/profile_email_edittext"
                style="@style/edittext_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="email" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />

            <TextView
                android:id="@+id/profile_password_edittext"
                style="@style/edittext_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Change Password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="lock it down" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />

            <RelativeLayout
                android:id="@+id/profile_facebook_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/profile_facebook_account_name"
                    style="@style/edittext_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="nrellihan@gmail.com" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_facebook_account_name"
                    android:layout_marginLeft="10dp"
                    android:text="Facebook" />

                <ImageView
                    android:id="@+id/profile_facebook_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/facebook_share" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#efefef" />

            <RelativeLayout
                android:id="@+id/profile_twitter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/profile_twitter_account_name"
                    style="@style/edittext_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="nrellihan@gmail.com" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_twitter_account_name"
                    android:layout_marginLeft="10dp"
                    android:text="Twitter" />

                <ImageView
                    android:id="@+id/profile_twitter_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/twitter_share" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_sign_out"
            style="@style/button_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out" />
    </RelativeLayout>
</RelativeLayout>


