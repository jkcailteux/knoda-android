<?xml version="1.0" encoding="utf-8"?>

<views.group.LeaderListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/group_leader_position_textview"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:gravity="right"
        android:lines="1"
        android:text="1"
        android:textAlignment="gravity"
        android:textColor="@color/knodaLightGreen"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/group_leader_username_textview"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/group_leader_position_textview"
        android:ellipsize="end"
        android:lines="1"
        android:text="test"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/group_leader_wins_textview"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/group_leader_winpercent_textview"
        android:ellipsize="end"
        android:lines="1"
        android:text="test"
        android:textColor="@color/knodaLightGreen"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/group_leader_winpercent_textview"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="test"
        android:textColor="@color/knodaLightGreen"
        android:textSize="14dp" />
</views.group.LeaderListCell>


