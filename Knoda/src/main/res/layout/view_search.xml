<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:background="@color/knodaDarkGreen"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/search_view_searchicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/search_view_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_clear_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"/>

    <EditText
        android:id="@+id/search_view_searchfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Knoda..."
        android:textColorHint="@color/knodaLightGreen"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/search_view_searchicon"
        android:layout_toLeftOf="@id/search_view_clear"
        android:singleLine="true"
        android:imeOptions="actionSearch"/>

</RelativeLayout>