<?xml version="1.0" encoding="utf-8"?>

<views.contests.ContestUserListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#CCC"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/contestuser_rank"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="1"
        android:textColor="@color/knodaLightGreen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/contestuser_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/contestuser_rank"
        android:background="@color/black" />

    <TextView
        android:id="@+id/contestuser_username"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/contestuser_avatar"
        android:gravity="center_vertical"
        android:text="ZachG"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contestuser_wins"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

</views.contests.ContestUserListCell>


