<?xml version="1.0" encoding="utf-8"?>

<views.contests.ContestUserListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#EFEFEF">

    <TextView
        android:id="@+id/contestuser_rank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:text="1"
        android:textColor="@color/knodaLightGreen"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/contestuser_avatar_container"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="6dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/contestuser_avatar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/contestuser_avatar_mask"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/leaderboard_gray_mask" />
    </RelativeLayout>

    <TextView
        android:id="@+id/contestuser_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contestuser_avatar_container"
        android:gravity="center_vertical"
        android:text="ZachG"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contestuser_wins"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</views.contests.ContestUserListCell>


