<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.login.LoginFragment"
    android:background="@color/knodaLightGreen">

    <ImageView
        android:id="@+id/login_logo_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo_small"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_below="@id/login_logo_small" >

    <EditText style="@style/edittext_main"
        android:id="@+id/login_username_edittext"
        android:layout_width="fill_parent"
        android:hint="@string/login_hint"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:imeOptions="actionNext"
        android:textColorHint="@color/defaultHintColor"/>

    <View
        android:id="@+id/login_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"
        android:layout_below="@id/login_username_edittext"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"/>

    <EditText style="@style/edittext_main"
        android:id="@+id/login_password_edittext"
        android:layout_width="fill_parent"
        android:layout_below="@+id/login_divider"
        android:layout_alignLeft="@id/login_username_edittext"
        android:hint="password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:textColorHint="@color/defaultHintColor"/>
    </RelativeLayout>

    <Button style="@style/smallWhiteText"
        android:id="@+id/login_forgot_button"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_container"
        android:layout_marginLeft="10dp"
        android:text="@string/forgot_password"/>



</RelativeLayout>
